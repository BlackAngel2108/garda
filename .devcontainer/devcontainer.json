{
    "name": "C++ Dev Environment",
    "build": {
        "dockerfile": "../Dockerfile"
    },
    "workspaceMount": "source=${localWorkspaceFolder},target=/app,type=bind,consistency=cached",
    "workspaceFolder": "/app",
    "forwardPorts": [8080],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools-extension-pack"
            ]
        }
    },
    "remoteUser": "root"
}